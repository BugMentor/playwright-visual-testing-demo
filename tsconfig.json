{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "ES2020",
            "DOM"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "types": [
            "node",
            "@playwright/test"
        ]
    },
    "include": [
        "tests/**/*",
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
